* { margin: 0; padding: 0; box-sizing: border-box; }
body { font-family: 'Arial', sans-serif; background: #1a0a2e; color: #fff; line-height: 1.6; }
header { background: #16213e; padding: 20px; text-align: center; border-bottom: 3px solid #f7a600; }
header h1 { color: #f7a600; font-size: 2.5em; margin-bottom: 10px; }
main { max-width: 1200px; margin: 0 auto; padding: 40px 20px; }
.hero { text-align: center; padding: 80px 20px; background: linear-gradient(135deg, #1a0a2e 0%, #16213e 100%); border-radius: 12px; margin-bottom: 60px; }
.hero h2 { font-size: 3em; margin-bottom: 20px; color: #f7a600; text-shadow: 0 0 20px rgba(247, 166, 0, 0.5); }
.hero p { font-size: 1.3em; color: #ddd; }
.games { margin-top: 60px; }
.games h3 { text-align: center; font-size: 2.5em; margin-bottom: 50px; color: #f7a600; }
.game-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 30px; }
.game-card { background: #16213e; padding: 40px; border-radius: 12px; text-align: center; border: 2px solid #f7a600; transition: all 0.3s ease; }
.game-card:hover { transform: translateY(-10px); box-shadow: 0 0 30px rgba(247, 166, 0, 0.6); border-color: #ffd700; }
.game-card h4 { font-size: 2em; margin-bottom: 15px; color: #f7a600; }
.game-card p { margin-bottom: 20px; color: #ccc; }
.game-card a { display: inline-block; padding: 12px 35px; background: #f7a600; color: #1a0a2e; text-decoration: none; border-radius: 8px; font-weight: bold; font-size: 1.1em; transition: all 0.3s; }
.game-card a:hover { background: #ffd700; transform: scale(1.05); }
footer { background: #16213e; padding: 30px; text-align: center; margin-top: 80px; border-top: 3px solid #f7a600; }
footer p { color: #ccc; margin: 5px 0; }
@media (max-width: 768px) { .hero h2 { font-size: 2em; } .game-grid { grid-template-columns: 1fr; } }
